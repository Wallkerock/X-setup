* {
  black:      #000000;
  red:        #eb6e67;
  green:      #E5E5E5;
  violet:     #D4304E;
  yellow:     #f8c456;
  blue:       #6eaafb;
  magenta:    #d886f3;
  cyan:       #6cdcf7;
  emphasis:   #E5E5E5;
  text:       #0D0D0D;
  text-alt:   #2F2F2F;
  fg:         #abb2bf;
  bg:         #282c34;

  spacing: 0;
  background-color: transparent;

  font: "Droid Serif Regular 12";
  text-color: @text-alt;
}

window {
  transparency: "real";
  fullscreen: false;
  width: 1600;
  height: 800;
  background-color: #F5F5F5;
}

mainbox {
  transparency: "real";
  padding: 10% 10%;
  border: 3px;
  border-color: #303030;
}

inputbar {
  margin: 0px 0px 20px 0px;
  children: [prompt, textbox-prompt-colon, entry, case-indicator];
}

prompt {
  text-color: @violet;
}

textbox-prompt-colon {
  expand: false;
  str: ":";
  text-color: @text-alt;
}

entry {
  margin: 0px 10px;
}

listview {
  spacing: 5px;
  dynamic: true;
  scrollbar: false;
}

element {
  padding: 5px;
  text-color: @text-alt;
  highlight: bold #000000; /* green */
  border-radius: 2px;
}

element selected {
  background-color: @emphasis;
  text-color: @text;
}

element urgent, element selected urgent {
  text-color: @red;
}

element active, element selected active {
  text-color: @purple;
}

message {
  padding: 5px;
  border-radius: 2px;
  background-color: @emphasis;
  border: 1px;
  border-color: @green;
}

button selected {
  padding: 5px;
  border-radius: 2px;
  background-color: @emphasis;
  text-color: @text;
}
