secondary = #e60053
alert = #bd2c40

[bar/example]
monitor = ${env:MONITOR:HDMI3}
width = 100%
height = 25
;offset-x = 1%
;offset-y = 1%
radius = 0.0
fixed-center = false
bottom = false

background = ${colors.background}
foreground = ${colors.foreground}

overline-size = 2
