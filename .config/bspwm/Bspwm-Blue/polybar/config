[module/eth]
type = internal/network
interface = enp2s0
exec = check-network
interval = 2.0
;udspeed-minwidth = 0

format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %{F#9a9a9a}(%downspeed:8%)%{F-}%{A}

format-disconnected = <label-disconnected>
label-disconnected = %{F#797979}down: ?%{F-}%{A}

[module/clipboard]
