click-right = sh ~/.scripts/clipboard-clear.sh &

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

;format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
;format-prefix-overline = ${colors.secondary}

; Available tokens:
;   %layout%
;   %name%
;   %number%
; Default: %layout%
label-layout = %{F#FFFFFF} %layout%%{F-}
;label-layout-overline = ${colors.secondary}

; Available tokens:
;   %name%
; Default: %name%
label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.secondary}
;label-indicator-overline = ${colors.secondary}

[module/date]
type = internal/date
interval = 1

date =
date-alt = "%{F#FFFFFF}%d%{F-}%{F#9A9A9A}.%m.%Y, %{F-}"

time = %{F#FFFFFF}%H:%M%{F#9A9A9A}, %Y-%m-%{F-}%{F#FFFFFF}%d%{F-}
time-alt = %H:%M

;format-prefix = 
format-prefix-foreground = ${colors.foreground-alt}
;format-overline = #0a6cf5

label = %{F#FFFFFF}%date%%time%%{F-}

