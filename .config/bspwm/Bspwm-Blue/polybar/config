[module/rofi]
type = custom/text
content-padding = 2
content-foreground = #FFFFFF
;content-background = #6B88FA
content = ""
click-left = "rofi -show drun -show-icons -drun-icon-theme Newaita-holidays-dark >/dev/null 2>&1 &"

[module/bspwm]
type = internal/bspwm
pin-workspaces = true
enable-click = true
enable-scroll = true
reverse-scroll = false

label-focused = %name%
label-focused-foreground = #FFFFFF
;label-focused-background = #3F61E6
;label-focused-underline = #FFFFFF
label-focused-overline = #FFFFFF
label-focused-padding = 1

label-occupied = %name%
label-occupied-foreground = #C0C0C0
;label-occupied-background = #373737
;label-occupied-overline = #313131
label-occupied-padding = 1

label-urgent = %name%
;label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = #484848
label-empty-padding = 1

fuzzy-match = true

[module/xwindow]
type = internal/xwindow
label-padding = 2
label-foreground = #D1D1D1
label = %title:0:30:...%

