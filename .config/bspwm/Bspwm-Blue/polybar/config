;click-left = firefox --new-window https://mail.google.com/mail/u/1/#inbox &
click-left = thunderbird &
click-right = sh ~/.scripts/check_mail.sh

[module/home]
type = internal/fs
interval = 25

mount-0 = /home

; Available tokens:
;   %mountpoint%
;   %type%
;   %fsname%
;   %percentage_free%
;   %percentage_used%
;   %total%
;   %free%
;   %used%
; Default: %mountpoint% %percentage_free%%
label-mounted = %{F#FFFFFF}/home: %percentage_used%%%{F-}
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

; Available tokens:
;   %mountpoint%
;   %type%
;   %fsname%
;   %percentage_free%
;   %percentage_used%
;   %total%
;   %free%
;   %used%
; Default: %mountpoint% %percentage_free%%
label-mounted = %{F#FF3E3E}/: %percentage_used%%%{F-}
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/memory]
type = internal/memory
interval = 2
;format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
;format-overline = #4bffdc
format = <label>
label = %{F#FFFFFF}RAM: %percentage_used:2%%%{F-}

bar-used-width = 10
bar-used-foreground-0 = #FFFFFF
bar-used-foreground-1 = #FFFFFF
bar-used-foreground-2 = #FFFFFF
bar-used-foreground-3 = #FFFFFF
bar-used-foreground-4 = #FFFFFF
bar-used-fill = |
bar-used-fill-font = 3
bar-used-empty = |
bar-used-empty-font = 3
bar-used-empty-foreground = #80A4F4
bar-used-gradient = false
bar-used-indicator =
bar-used-indicator-font = 3

[module/temperature]
type = internal/temperature
thermal-zone = 0
interval = 1
warn-temperature = 60

hwmon-path = /sys/devices/platform/coretemp.0/hwmon/hwmon0/temp1_input

format = <label>
;format-overline = #f50a4d
format-warn = <ramp> <label-warn>
;format-warn-overline = ${self.format-underline}

label = %{F#FFC345}T: %temperature-c%%{F-}
label-warn = %temperature-c%
label-warn-foreground = ${colors.secondary}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = ${colors.foreground-alt}

[module/cpu]
type = internal/cpu

; Seconds to sleep between updates
; Default: 1
interval = 1

; Available tags:
;   <label> (default)
;   <bar-load>
;   <ramp-load>
;   <ramp-coreload>
format = <label>

; Available tokens:
;   %percentage% (default) - total cpu load
;   %percentage-cores% - load percentage for each core
;   %percentage-core[1-9]% - load percentage for specific core
label = %{F#15FF00}CPU: %percentage:2%%%{F-}

[module/pulseaudio]
type = internal/pulseaudio

; Sink to be used, if it exists (find using `pacmd list-sinks`, name field)
; If not, uses default sink
;sink = alsa_output.pci-0000_12_00.3.analog-stereo
sink = alsa_output.pci-0000_00_1b.0.analog-stereo

; Use PA_VOLUME_UI_MAX (~153%) if true, or PA_VOLUME_NORM (100%) if false
; Default: true
use-ui-max = true

; Interval for volume increase/decrease (in percent points) (unreleased)
; Default: 5
interval = 5

; Available tags:
;   <label-volume> (default)
;   <ramp-volume>
;   <bar-volume>
format-volume = %{F#FF9F00}vol: <label-volume>%{F-}

; Available tags:
;   <label-muted> (default)
;   <ramp-volume>
;   <bar-volume>
;format-muted = <label-muted>

; Available tokens:
;   %percentage% (default)
label-volume = %percentage:2%%

; Available tokens:
;   %percentage% (default)
label-muted = " muted "
label-muted-foreground = #FFFFFF
label-muted-background = #FF0000

; Only applies if <ramp-volume> is used
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

bar-volume-width = 21
bar-volume-foreground-0 = #FFFFFF
bar-volume-foreground-1 = #FFFFFF
bar-volume-foreground-2 = #FFFFFF
bar-volume-foreground-3 = #FFFFFF
bar-volume-foreground-4 = #FFFFFF
bar-volume-foreground-5 = #FFFFFF
bar-volume-foreground-6 = #FFFFFF
bar-volume-foreground-7 = #FFFFFF
bar-volume-foreground-8 = #FFFFFF
bar-volume-gradient = true
bar-volume-indicator =
bar-volume-indicator-font = 3
bar-volume-fill = |
bar-volume-fill-font = 3
bar-volume-empty = |
bar-volume-empty-font = 3
bar-volume-empty-foreground = #80A4F4

