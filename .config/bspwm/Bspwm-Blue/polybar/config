modules-right = ssh system-uptime-pretty openweathermap-detailed updates-arch gmail home filesystem memory cpu temperature info-publicip connection eth clipboard xkeyboard pulseaudio date reload powermenu

tray-position = right
;tray-detached = true
;tray-padding = 0
;tray-transparent = true
