# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec --no-startup-id "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# Set shut down, restart and locking features
bindsym $mod+l exec --no-startup-id "sh /home/lubomir/.config/lock.sh"
#bindsym $mod+0 mode "$mode_system"
set $Locker sh /home/lubomir/.config/lock.sh

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
bindsym $mod+0 mode "$mode_system"

mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

set $mode_launcher Launch: w, e, r, s, d, t, o, s, f, g, z, v, n, m
bindsym $mod+x mode "$mode_launcher"

mode "$mode_launcher" {
    bindsym w exec --no-startup-id firefox, mode "default"
    bindsym e exec --no-startup-id subl, mode "default"
    bindsym r exec --no-startup-id urxvt -e ranger, mode "default"
