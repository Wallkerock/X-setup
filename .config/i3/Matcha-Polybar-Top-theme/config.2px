    bindsym o exec --no-startup-id lowriter, mode "default"
    bindsym s exec --no-startup-id simplescreenrecorder, mode "default"
    bindsym d exec --no-startup-id evince, mode "default"
    bindsym f exec --no-startup-id nautilus --new-window, mode "default"
    bindsym g exec --no-startup-id gimp, mode "default"
    bindsym z exec --no-startup-id zathura, mode "default"
    bindsym v exec --no-startup-id vlc, mode "default"
    bindsym n exec --no-startup-id urxvt -e ncmpcpp, mode "default"
    bindsym m exec --no-startup-id smplayer, mode "default"

    bindsym Escape mode "default"
    bindsym Return mode "default"
}

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 3 px or 3 ppt
        bindsym Down resize grow height 3 px or 3 ppt
        bindsym Up resize shrink height 3 px or 3 ppt
        bindsym Right resize grow width 3 px or 3 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

